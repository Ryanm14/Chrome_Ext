{
  "manifest_version": 2,

  "name": "Censor",
  "description": "Censor negative messages from social media",
  "version": "1.0",
  "icons": { 
   "64" : "icon.png"
  },

  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },

  "content_scripts": [
   {
   "matches": ["http://*/*", "https://*/*"],
   "js": ["content.js"]
   }
  ]
  
}