{
  "manifest_version": 2,

  "name": "Word Cop",
  "short_name": "Word Cop",
  "description": "Word Cop censors profanity and inappropriate words on the Internet.",
  "version": "1.21",
  "offline_enabled": true,
 
  "permissions": [
    "tabs", "<all_urls>","storage","browsingData"
  ],
  "icons": { 
   "64" : "icon.png"
  },
  "content_scripts": [
    {
      "matches":["<all_urls>"],
      "js":["functions.js"]
    }
  ],
  "background": {
    "scripts": ["scripts.js"],
    "persistent": false
  },
  "web_accessible_resources": ["words.json"]
}