{
  "manifest_version": 2,

  "name": "Censor",
  "description": "Censor negative messages from social media like twitter",
  "version": "1.0",
  
  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },
  
  "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ],

  

  "permissions": [
   "activeTab"
   ]
   
}